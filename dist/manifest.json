{
    "manifest_version": 3,
    "name": "TakeVid",
    "description": "Save Youtube and TikTok videos in high quality videos or MP3",
    "version": "1.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "cookies",
        "storage",
        "clipboardRead"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/*",
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}